@{
    Layout = "~/Views/Shared/_Layout_Blank.cshtml";
    ViewBag.Title = "Login";
}

@Styles.Render("~/bundles/login-page/css")

@section Scripts {
    @Scripts.Render("~/bundles/login-page/js")
    @Scripts.Render("~/bundles/sha256/js")
}

<div class="login-container">
    <div class="row">
        <div class="col-md-12">
            <div class="text-center m-b-md">
                <h3>PLEASE LOGIN TO NIGMYS</h3>
                <small>Know your investments!</small>
            </div>
            <div class="hpanel">
                <div class="panel-body">
                    <form id="loginForm" method="post">
                        <div class="form-group" id="usernameGroup">
                            <label class="control-label" for="username">Username</label>
                            <input type="text" placeholder="example" title="Please enter you username" required="" value="" name="username" id="username" class="form-control">
                            @*<span class="help-block small">Your unique username to app</span>*@
                        </div>
                        <div class="form-group" id="passwordGroup">
                            <label class="control-label" for="password">Password</label>
                            <input type="password" title="Please enter your password" placeholder="******" required="" value="" name="password" id="password" class="form-control">
                            <span class="help-block small error hidden-error" id="loginError">Password and username do not match</span>
                        </div>
                        <div class="checkbox">
                            <input type="checkbox" class="i-checks" checked>
                            Remember login
                            <p class="help-block small">(if this is a private computer)</p>
                        </div>
                        <a class="btn btn-success btn-block" id="Login_Button">Login</a>
                        <a class="btn btn-default btn-block" href="@Url.Action("Index", "SignUp")">Register</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 text-center">
            <strong>NIGMYS</strong> - Real Estate Portfolio Web Application <br /> 2015 Copyright Nigmys
        </div>
    </div>
</div>
